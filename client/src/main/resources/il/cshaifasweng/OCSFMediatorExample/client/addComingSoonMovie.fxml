<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<DialogPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="343.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.controllers.AddComingSoonMovieController">
    <content>
        <StackPane prefHeight="150.0" prefWidth="360.0">
            <children>
                <VBox alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="0.0" prefWidth="340.0" spacing="10.0" StackPane.alignment="CENTER">
                    <children>
                        <Label alignment="TOP_CENTER" text="שם הסרט:">
                            <font>
                                <Font size="15.0" />
                            </font>
                        </Label>
                        <TextField fx:id="movieNameField" prefWidth="225.0" />

                        <Label alignment="TOP_CENTER" text="שם המפיק:">
                            <font>
                                <Font size="15.0" />
                            </font>
                        </Label>
                        <TextField fx:id="producerNameField" prefWidth="225.0" />

                        <Label alignment="TOP_CENTER" text="שחקנים ראשיים (מופרדים בפסיק):">
                            <font>
                                <Font size="15.0" />
                            </font>
                        </Label>
                        <TextField fx:id="mainActorsField" prefWidth="225.0" />

                        <Label alignment="TOP_CENTER" text="תיאור:">
                            <font>
                                <Font size="15.0" />
                            </font>
                        </Label>
                        <TextField fx:id="descriptionField" prefWidth="225.0" />

                        <Label alignment="TOP_CENTER" text="תמונה (URL):">
                            <font>
                                <Font size="15.0" />
                            </font>
                        </Label>
                        <TextField fx:id="pictureField" prefWidth="225.0" />

                        <HBox alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="34.0" prefWidth="340.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#onCancelAddingMovie" text="בטל">
                                    <HBox.margin>
                                        <Insets right="3.0" />
                                    </HBox.margin>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#onAddComingSoonMovie" text="הוסף" />
                            </children>
                        </HBox>
                        <Label fx:id="statusLabel" text="Status" visible="false" />
                    </children>
                </VBox>
            </children>
        </StackPane>
    </content>
</DialogPane>
